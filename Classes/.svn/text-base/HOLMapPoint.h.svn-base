#import <Foundation/Foundation.h>
#import <MapKit/MapKit.h>

// Enumerations ///////
typedef enum HOLMAPPOINTTYPE {
	HOLMAPPOINT,
	HOLMAPPOLYGON,
	HOLMAPLOCATION,
} HOLMAPPOINTTYPE;

@interface HOLMapPoint : NSObject <MKAnnotation> {
	CLLocationCoordinate2D coordinate;
	NSString *locID;
	HOLMAPPOINTTYPE pointType;
}

@property (nonatomic, readwrite) CLLocationCoordinate2D coordinate;
@property (nonatomic, retain) NSString *locID;
@property (nonatomic, readwrite) HOLMAPPOINTTYPE pointType;

// Public function declarations
- (id)initWithCoordinates:(CLLocationCoordinate2D)coordinates ptType:(HOLMAPPOINTTYPE)ptType;

@end
