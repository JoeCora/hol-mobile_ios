#import <Foundation/Foundation.h>
#import "Three20/Three20.h"

@interface HOLPicture : NSObject <TTPhoto> {
    id<TTPhotoSource> photoSource;
	NSString *urlThumbnail;
	NSString *urlCompressed;
	NSString *caption;
    CGSize size;
    NSInteger index;
}

@property (nonatomic, readwrite, assign) id<TTPhotoSource> photoSource;
@property (nonatomic, retain) NSString *urlThumbnail;
@property (nonatomic, retain) NSString *urlCompressed;
@property (nonatomic, readwrite, copy) NSString *caption;
@property (nonatomic) CGSize size;
@property (nonatomic) NSInteger index;

// Public function declarations
- (id)initWithThumbnail:(NSString *)thumb compressed:(NSString *)compress caption:(NSString*)imageCaption size:(CGSize)imageSize;

@end
